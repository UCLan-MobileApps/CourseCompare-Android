<?xml version="1.0" encoding="utf-8"?>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
	    android:background="@drawable/background2"
	    android:orientation="vertical" >

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.69" 
        android:layout_gravity="center_horizontal|center"
        android:gravity="center" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="300dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:src="@drawable/comparelogo" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="Search options"
                android:text="Advanced Search"
                android:textColor="@android:color/black"
                android:textAppearance="?android:attr/textAppearanceMedium" />

    <Spinner
        android:id="@+id/institutions"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@drawable/orange"
        android:contentDescription="choose an institution"
        android:focusable="true"
        android:gravity="center"
        android:textColor="@android:color/black" />

	<requestFocus />
	
    <Spinner
        android:id="@+id/qualifications"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@drawable/orange"
        android:contentDescription="choose a qualification" />

    <Spinner
        android:id="@+id/studymodes"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@drawable/orange"
        android:contentDescription="choose a study mode" />

    <Spinner
        android:id="@+id/distance"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@drawable/orange"
        android:contentDescription="choose a search distance" />

    <Spinner
        android:id="@+id/units"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@drawable/orange"
        android:contentDescription="choose the search units" />

    <Spinner
        android:id="@+id/displayorder"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@drawable/orange"
        android:contentDescription="choose the display order" />

    <EditText
        android:id="@+id/keyword"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:contentDescription="keyword"
        android:ems="10"
        android:hint="keyword"
        android:inputType="textNoSuggestions"
        android:textColor="@android:color/black" />

    <EditText
        android:id="@+id/postcode"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:contentDescription="postcode"
        android:textColor="@android:color/black"
        android:inputType="textNoSuggestions"
        android:ems="10" 
        android:hint="postcode"/>

    <Button
        android:id="@+id/search"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:background="@drawable/search"
        android:contentDescription="search courses"
        android:gravity="center" />

        </LinearLayout>

    </ScrollView>
    </LinearLayout>