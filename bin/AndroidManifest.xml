<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.ac.uclan.coursecompare"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>

  <application
        android:icon="@drawable/iconbig"
        android:label="@string/app_name"
        android:name="GlobalState"
         >
        
        <activity
            android:name=".CourseCompareActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

                <activity
            android:name=".AdvancedSearch"
            android:label="Advanced Search" >
            <intent-filter>
                <action android:name="uk.ac.uclan.ADVANCEDSEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
         <activity
            android:name=".SearchList"
            android:label="Search List" >
            <intent-filter>
                <action android:name="uk.ac.uclan.SEARCHLIST" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
         <activity
            android:name="CourseDetails"
            android:label="Course Details" >
            <intent-filter>
                <action android:name="uk.ac.uclan.COURSEDETAILS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
                  <activity
            android:name="Information"
            android:label="Information" >
            <intent-filter>
                <action android:name="uk.ac.uclan.INFORMATION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
    </application>

</manifest>
